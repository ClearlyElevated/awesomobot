            </div>

        </div>
        <!--/.Content-->
    </div>
</div>
<script>
    //Set cookie on click
    function setCookieLang(lang) {
        document.cookie = "ulang=" + lang
    }
    //URL Based Setting
    const loc = window.location.href.indexOf("hl=") + 3;
    const hl = window.location.href.substring(loc).slice(0, 5)

    console.log(hl.indexOf("-"))

    if (loc !== 2) {
        if (hl.indexOf("-") === 2) {
            document.cookie = "ulang=" + hl
        } else {
            document.cookie = "ulang=" + hl.slice(0, 2);
        }

    }
</script>